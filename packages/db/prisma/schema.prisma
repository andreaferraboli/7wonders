generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  games     GamePlayer[]
}

model Game {
  id          String      @id @default(cuid())
  seed        String      // RNG seed per determinismo
  config      Json        // GameConfig
  status      String      // GamePhase
  snapshot    Json?       // Ultimo stato salvato
  createdAt   DateTime    @default(now())
  finishedAt  DateTime?
  players     GamePlayer[]
  events      GameEvent[]
}

model GamePlayer {
  id       String @id @default(cuid())
  game     Game   @relation(fields: [gameId], references: [id])
  gameId   String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  position Int
  finalScore Int?

  @@unique([gameId, userId])
}

model GameEvent {
  id        String   @id @default(cuid())
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  turn      Int
  playerId  String
  type      String   // "BUILD", "SELL", "WONDER"
  cardId    String
  payment   Json?
  timestamp DateTime @default(now())

  @@index([gameId, turn])
}
